<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_provider"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    >
    <EditText
        android:id="@+id/et_id_userinfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="用户描述信息"
        />
    <EditText
        android:id="@+id/et_id_usercall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="用户电话号码"
        />
    <EditText
        android:id="@+id/et_id_usercompany"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="用户所属的公司id"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="存储"
        android:id="@+id/bt_id_submituser" />

    <EditText
        android:id="@+id/et_id_companyid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="公司id"
        />
    <EditText
        android:id="@+id/et_id_companybus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="公司业务"
        />
    <EditText
        android:id="@+id/et_id_companypath"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="公司地址"
        />
    <Button
        android:id="@+id/bt_id_submitcom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="存储公司记录"
        />
</LinearLayout>
